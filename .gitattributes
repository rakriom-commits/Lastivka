# --- text normalization ---
*           text=auto

# Use LF для кросплатформенних текстів
*.py        text eol=lf
*.ps1       text eol=lf
*.psm1      text eol=lf
*.sh        text eol=lf
*.yml       text eol=lf
*.yaml      text eol=lf
*.json      text eol=lf
*.md        text eol=lf
*.csv       text eol=lf
*.ini       text eol=lf
*.toml      text eol=lf

# Windows-скрипти, де CRLF доречний
*.bat       text eol=crlf
*.cmd       text eol=crlf

# Бінарні/моделі/вендори
*.exe       -text
*.dll       -text
*.pdb       -text
*.png       -text
*.jpg       -text
*.wav       -text
*.mp3       -text
*.pth       -text
vendors/**  -text
